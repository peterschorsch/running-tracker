<%= form_with(model: [:user, :settings, current_user], local: true, :url => { :action => "update" }, class: "form-horizontal", html: { autocomplete: "off" }) do |form| %>
  <div class="row vertical-align-middle">
    <div class="col-md-2 col-xs-12 text-right"><%= form.label :first_name, 'First Name:' %></div>
    <div class="col-md-4 col-xs-12"><%= form.text_field :first_name, class: 'form-control', :disabled => disable_form %></div>
    <div class="col-md-2 col-xs-12 text-right"><%= form.label :last_name, 'Last Name:' %></div>
    <div class="col-md-4 col-xs-12"><%= form.text_field :last_name, class: 'form-control', :disabled => disable_form %></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-md-2 col-xs-12 text-right"><%= form.label :email, 'Email:' %></div>
    <div class="col-md-10 col-xs-12"><%= form.text_field :email, class: 'form-control', :disabled => disable_form %></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-md-2 col-xs-12 text-right"><label>Location:</label></div>
    <div class="col-md-4 col-xs-12"><%= form.text_field :default_city, class: 'form-control', :disabled => disable_form %></div>
    <div class="col-md-3 col-xs-12"><%= form.select(:default_state, State.select_state_name, { :include_blank => "Select a State" }, { :class => "form-control", :disabled => disable_form }) %></div>
    <div class="col-md-3 col-xs-12"><%= form.select(:default_country, Country.select_country_name, { :include_blank => "Select a Country" }, { :class => "form-control", :disabled => disable_form }) %></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-md-2 col-xs-12 text-right"><%= form.label :time_zone, 'Time Zone:' %></div>
    <div class="col-md-10 col-xs-12"><%= form.time_zone_select :time_zone, nil, {}, { :class => 'form-control', :disabled => disable_form } %></div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form.button :submit, class: 'btn btn-success btn-block', :disabled => disable_form do %>
        <span class="glyphicon glyphicon-ok"></span> Save
      <% end %>
    </div>
  </div>
<% end %>
