<%= render index_header_path, heading_text: current_user.concat_name %>

<%= render "templates/alerts/form-errors", model: current_user %>
<%= render alert_path %>

<div class="row">
	<div class="col-md-6 col-sm-12">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h1 class="text-center">Basic Information</h1>
				</div>
				<div class="panel-body">
					<%= render 'user/settings/basic-user-attr-form', disable_form: session[:website_viewer] %>
				</div>
			</div>
		</div>
		<% if session[:administrator] %>
			<div class="text-center">
				<p><strong><u>Website Viewer</u></strong></p>
				<p>Last Logged in at: <strong><%= formateDateTimeWithAt(@website_viewer.last_login) %></strong></p>
			</div>
		<% end %>
	</div>
	<div class="col-md-6 col-sm-12">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h1 class="text-center">Change Password</h1>
				</div>
				<div class="panel-body">
					<%= render 'user/settings/password-form', disable_form: session[:website_viewer] %>
				</div>
			</div>
		</div>
	</div>
</div>