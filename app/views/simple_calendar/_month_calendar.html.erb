<div class="simple-calendar">
  <div class="calendar-heading">
    <h1 class="calendar-title align-center"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></h1>
  </div>

  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th style="text-align: center"><%= t('date.day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) << " align-left" do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call formatCalendarDay(day), sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
