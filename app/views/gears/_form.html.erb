<%= form_with(model: gear, local: true) do |f| %>
  <%= render "templates/alerts/form-errors", model: gear %>
  <div class="row">
    <div class="col-xs-2 col-xs-offset-9 align-right"><%= f.label :default, 'Make Default?' %></div>
    <div class="col-xs-1"><%= f.check_box :default, { class: 'form-control' } %></div>
  </div>
  <br />
  <% if f.object.new_record? %>
    <div class="row vertical-align-middle">
      <div class="col-xs-2 align-right"><%= f.label :image, 'Shoe Image:' %></div>
      <div class="col-xs-9"><%= f.file_field :image, class: 'form-control' %></div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-xs-1 col-xs-offset-5"><%= image_tag(f.object.image.url, class: "shoe-icon", alt: f.object.image_file_name) %></div>
    </div>
    <br />
    <div class="row vertical-align-middle">
      <div class="col-xs-2 col-xs-offset-1 align-right"><%= f.label :image, 'Change Image:' %></div>
      <div class="col-xs-4"><%= f.file_field :image, { class: 'form-control' } %></div>
    </div>
  <% end %>
  <br />
  <hr />
  <div class="row vertical-align-middle">
    <div class="col-xs-1 align-right"><%= f.label :shoe_brand_id, 'Brand:' %></div>
    <div class="col-xs-2"><%= f.select(:shoe_brand_id, ShoeBrand.select_shoe_id_name, { :include_blank => "Please Select a Brand" }, { :class => "form-control" })%></div>
    <div class="col-xs-1 align-right"><%= f.label :model, 'Model:' %></div>
    <div class="col-xs-2"><%= f.text_field :model, { class: 'form-control', placeholder: "Pegasus 37" } %></div>
    <div class="col-xs-1 align-right"><%= f.label :color_way, 'Color:' %></div>
    <div class="col-xs-2"><%= f.text_field :color_way, { class: 'form-control', placeholder: "Black" } %></div>
    <div class="col-xs-1 align-right"><%= f.label :shoe_type, 'Type:' %></div>
    <div class="col-xs-2"><%= f.select(:shoe_type, ["Neutral", "Stability"], { :include_blank => "Please Select a Type" }, { :class => "form-control" })%></div>
  </div>
  <hr />
  <div class="row vertical-align-middle">
    <div class="col-xs-1 align-right"><%= f.label :heel_drop, 'Drop (mm):' %></div>
    <div class="col-xs-2"><%= f.number_field :heel_drop, { min: 0, step: 1, placeholder: "10", class: 'form-control' } %></div>
    <div class="col-xs-1 align-right"><%= f.label :weight, 'Weight (oz):' %></div>
    <div class="col-xs-2"><%= f.number_field :weight, { min: 0, step: 0.1, placeholder: "10", class: 'form-control' } %></div>
    <div class="col-xs-1 align-right"><%= f.label :size, 'Size (US):' %></div>
    <div class="col-xs-2"><%= f.number_field :size, { min: 0, step: 0.5, placeholder: "8.5", class: 'form-control' } %></div>
    <div class="col-xs-1 align-right"><%= f.label :mileage, 'Mileage:' %></div>
    <div class="col-xs-2"><%= f.number_field :mileage, { min: 0, step: 1, class: 'form-control' } %></div>
  </div>
  <hr />
  <div class="row vertical-align-middle">
    <div class="col-xs-1 align-right"><%= f.label :purchased_on, 'Purchased:' %></div>
    <div class="col-xs-2"><%= f.date_field :purchased_on, { class: 'form-control' } %></div>
    <div class="col-xs-1 align-right"><%= f.label :first_used_on, 'First Used:' %></div>
    <div class="col-xs-2"><%= f.date_field :first_used_on, { class: 'form-control' } %></div>
    <div class="col-xs-2 align-right"><%= f.label :retired, 'Retire Shoe?' %></div>
    <div class="col-xs-1"><%= f.check_box :retired, { class: 'form-control' } %></div>
    <div class="col-xs-1 align-right"><%= f.label :retired_on, 'Retired:' %></div>
    <div class="col-xs-2"><%= f.date_field :retired_on, { class: 'form-control' } %></div>
  </div>
  <br /><br />
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.submit "Save Changes", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>
