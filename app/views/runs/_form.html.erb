<%= form_with(model: run, local: true, class: "form-horizontal", html: { autocomplete: "off" }) do |f| %>
  <%= render "templates/alerts/form-errors", model: run %>

  <div class="row vertical-align-middle">
    <div class="col-xs-1 align-right"><%= f.label :name, 'Name:' %></div>
    <div class="col-xs-3"><%= f.text_field :name, { class: 'form-control', placeholder: "Los Angeles Running" } %></div>
    <div class="col-xs-1"><%= f.label :start_time, 'Start Time:' %></div>
    <div class="col-xs-3"><%= f.datetime_field :start_time, { class: 'form-control' } %></div>
    <div class="col-xs-1 align-right"><%= f.label :gear_id, 'Shoe:' %></div>
    <div class="col-xs-2"><%= f.select(:gear_id, Gear.select_gear_id_name, { :include_blank => Gear.return_default_shoe.return_full_shoe_name }, { :class => "form-control" })%></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-xs-1 align-right"><%= f.label :mileage_total, 'Distance (miles):' %></div>
    <div class="col-xs-2"><%= f.number_field :mileage_total, { class: 'form-control', min: 0, step: 0.1, placeholder: "4" } %></div>
    <div class="col-xs-1 align-right"><%= f.label :hours, 'Elasped Time:' %></div>
    <div class="col-xs-1"><%= f.number_field :hours, { class: 'form-control', min: 0, step: 1, placeholder: "hours" } %></div>
    <div class="col-xs-1"><%= f.number_field :minutes, { class: 'form-control', min: 0, step: 1, placeholder: "minutes" } %></div>
    <div class="col-xs-1"><%= f.number_field :seconds, { class: 'form-control',  min: 0, step: 1, placeholder: "seconds" } %></div>
    <div class="col-xs-1 align-right"><%= f.label :run_type_id, 'Run Type:' %></div>
    <div class="col-xs-2"><%= f.select(:run_type_id, RunType.select_run_type_id_name, { :include_blank => "Select a Run Type" }, { :class => "form-control" })%></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-xs-2 align-right"><%= f.label :pace, 'Pace (mi/min):' %></div>
    <div class="col-xs-2"><%= f.text_field :pace, { class: 'form-control', placeholder: "7:35" } %></div>
    <div class="col-xs-2 align-right"><%= f.label :elevation_gain, 'Elevation Gain (ft):' %></div>
    <div class="col-xs-2"><%= f.number_field :elevation_gain, { class: 'form-control', min: 0, step: 1, placeholder: "200" } %></div>
  </div>
  <br />
  <div class="row vertical-align-middle">
    <div class="col-xs-2 align-right"><%= f.label :city, 'City:' %></div>
    <div class="col-xs-2"><%= f.text_field :city, { class: 'form-control', placeholder: "Los Angeles" } %></div>
    <div class="col-xs-1 align-right"><%= f.label :state_id, 'State:' %></div>
    <div class="col-xs-2"><%= f.select(:state_id, State.select_state_id_name, { :include_blank => "Select a State" }, { :class => "form-control" })%></div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.submit "Save Changes", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>