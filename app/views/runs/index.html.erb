<%= render index_header_new_btn_path, new_path: new_run_path, new_btn_text: "Run", heading_text: "My Runs" %>

<table class="table table-responsive table-striped table-hover table-responsive w-auto" id="runs_table">
  <thead>
    <tr>
      <th>Run</th>
      <th>Run Type</th>
      <th>Distance</th>
      <th>Time</th>
      <th>Pace</th>
      <th>Elevation Gain</th>
      <th>Shoe Selection</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @runs.each do |run| %>
      <tr class="text-center">
        <td>
          <small class="text-muted"><%= formateDateTimeWithAt(run.start_time) %></small><br />
          <%= bold_text(run.name) %><br />
          <small><%= run.notes %></small>
        </td>
        <td style="color: <%=run.hex_code%>"><%= run.run_type.name %></td>
        <td><%= concat_distance_miles(run.mileage_total) %></td>
        <td><%= concat_elapsed_time(run.time_in_seconds) %></td>
        <td><%= concat_pace_min_miles(run) %></td>
        <td><%= concat_elevation_gain(run.elevation_gain) %></td>
        <td><%= return_full_shoe_name(run.shoe) %> (<%= return_shoe_mileage(run.shoe.total_mileage) %>)</td>
        <td>
          <%= render edit_icon_btn_path, edit_path: edit_run_path(run), disabled_condition: false %>
          <%= render remove_icon_btn_path, object: run, disabled_condition: session[:website_viewer] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
