<%= render index_header_new_btn_path, new_path: new_run_path, new_btn_text: "Run", heading_text: "My Runs" %>

<table class="table table-responsive table-striped table-hover table-responsive w-auto">
  <thead>
    <tr>
      <th>Run</th>
      <th>Distance</th>
      <th>Time</th>
      <th>Pace</th>
      <th>Elevation Gain</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @runs.each do |run| %>
      <tr class="align-center">
        <td>
          <%= formateDateTimeWithAt(run.start_time) %><br />
          <strong><%= run.name %></strong><br />
          <%= run.gear.model %> (<%= run.gear.return_shoe_mileage %>)<br />
          <%= run.notes %>
        </td>
        <td><%= concat_distance_miles(run.mileage_total) %></td>
        <td><%= concat_elapsed_time(run.hours, run.minutes, run.seconds) %></td>
        <td><%= concat_pace_min_miles(run.pace) %></td>
        <td><%= concat_elevation_gain(run.elevation_gain) %></td>
        <td><%= render edit_icon_btn_path, edit_path: edit_run_path(run) %></td>
        <td><%= render remove_icon_btn_path, object: run %></td>
      </tr>
    <% end %>
  </tbody>
</table>
