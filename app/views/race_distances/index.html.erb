<%= render index_header_new_btn_path, new_path: new_race_distance_path, new_btn_text: "Race Distance", heading_text: "Race Distances" %>

<table class="table table-responsive table-striped table-hover table-responsive w-auto">
  <tbody>
    <% @race_distances.each do |race_distance| %>
      <tr>
        <td>
          <%= race_distance.name %>
          <%= render edit_icon_btn_path, edit_path: edit_race_distance_path(race_distance) %>
          <%= render remove_icon_btn_path, object: race_distance %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
