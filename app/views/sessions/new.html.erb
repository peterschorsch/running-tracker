<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if alert %>
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1"><h3 class="text-center red-text" id=”alert”><%= alert %></h3></div>
          </div>
        <% end %>
        <% if notice %>
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1"><h3 class="text-center" id="notice"><%= notice %></h3></div>
          </div>
        <% end %>
        <br />
        <div class="row">
          <div class="col-xs-6 col-xs-offset-3">
            <%= link_to image_tag("logos/login_runner_icon.png", class: "fill-width"), login_path %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <h1 class="text-center">Run Tracker</h1>
          </div>
        </div>
        <br />
        <%= form_tag sessions_path, html: { autocomplete: "off" } do |form| %>
          <div class="form-group">
            <%= text_field_tag :email, "", class: "form-control", placeholder: "Please enter your Email" %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, "", class: "form-control", placeholder: "Please enter your Password" %>
          </div>
          <div class="actions form-group">
            <%= submit_tag 'Login', class: 'btn btn-success btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
