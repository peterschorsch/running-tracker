<h1 class="display-1 text-center">Statistics</h1>
<hr />

<div class="row">
	<div class="col-md-6 col-sm-12 text-center">
		<%= render mileage_chart_path, title: "Mileage this Week", data: @current_week_graph %>
		<br />
		<%= render weekly_mileage_progress_path, object: @weekly_totals.of_week %>
		<% @current_week_runs.each do |run| %>
			<p><%= formatDayofWeek(run.start_time) %>, <%= formateDateTimeWithAt(run.start_time) %> | <%= run.run_type.name %> | <%= run.gear.return_full_shoe_name %> </p>
			<p><%= concat_distance_miles(run.mileage_total) %> | <%= concat_elapsed_time(run) %> | <%= concat_pace_min_miles(run.pace) %> | <%= concat_elevation_gain(run.elevation_gain) %></p>
			<br />
		<% end %>
	</div>
	<div class="col-md-6 col-sm-12 text-center">
		<%= render mileage_chart_path, title: "Mileage over the past 4 Weeks", data: @weekly_totals_graph %>
		<% @weekly_totals.each do |weekly_total| %>
			<p><%= formatMonthDayDate(weekly_total.week_start) %>-<%= formatDate(weekly_total.week_end) %> | <%= concat_run_totals_line_one(weekly_total) %> | <%= concat_run_totals_line_two(weekly_total) %></p>
		<% end %>
	</div>
</div>
<hr />
<div class="row">
	<div class="col-md-6 col-sm-12 text-center">
		<%= render mileage_chart_path, title: "Mileage over the past 12 Months", data: @monthly_stats_graph %>
		<% @monthly_totals.each do |monthly_total| %>
			<p><%= format_month(monthly_total.month_end) %> <%= formatYear(monthly_total.month_end) %> | <%= concat_run_totals_line_one(monthly_total) %> | <%= concat_run_totals_line_two(monthly_total) %></p>
		<% end %>
	</div>
	<div class="col-md-6 col-sm-12 text-center">
		<%= render mileage_chart_path, title: "Mileage Year-to-Year", data: @yearly_totals_graph %>
		<% @yearly_totals.each do |yearly_total| %>
			<p><%= formatYear(yearly_total.year_end) %> | <%= concat_run_totals_line_one(yearly_total) %> | <%= concat_run_totals_line_two(yearly_total) %></p>
		<% end %>
	</div>
</div>
<hr />
<div class="row">
	<div class="col-md-4 col-md-offset-4 text-center">
		<h2>All-Time</h2>
		<hr />
		<p><%= concat_run_totals_line_one(@all_time_stats) %></p>
		<p><%= concat_run_totals_line_two(@all_time_stats) %></p>
	</div>
</div>
