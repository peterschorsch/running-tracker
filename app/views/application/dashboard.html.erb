<% if notice %>
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-1">
			<div class="alert alert-success alert-dismissable text-center" role="alert">
				<h2>
					<a href="#" class="close text-link" data-dismiss="alert" aria-label="close">X</a>
					<span id="notice"><%= raw(notice) %></span>
				</h2>
			</div>
		</div>
	</div>
<% end %>

<% if alert %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h3 class="text-center red-text" id=”alert”><%= alert %></h3>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-md-12">
		<%= month_calendar(attribute: :start_time, events: @runs) do |date, runs| %>
			<h5><strong><%= date %></strong></h5>
			<hr />
			<% runs.each do |run| %>
				<div class="panel panel-default card" style="border-color: <%= run.run_type.hex_code %>">
					<div class="row padding">
						<div class="col-xs-12 text-center">
							<div><strong><%= run.name %></strong></div>
							<div>
								<small>
									<%= concat_distance_miles(run.mileage_total) %> | <strong><%= concat_elapsed_time(run.hours, run.minutes, run.seconds) %></strong>
									<br />
									<%= concat_pace_min_miles(run.pace) %> | <%= concat_elevation_gain(run.elevation_gain) %>
								</small>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>

