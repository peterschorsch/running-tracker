<div class="panel panel-default">
	<div class="panel-heading text-center">
		<div class="row">
			<div class="col-md-12">
				<h1>Weekly Totals</h1>
			</div>
		</div>
	</div>
	<div class="panel-body text-center">
		<div class="row">
			<div class="col-md-10">
				<div class="row">
					<div class="col-md-12">
						<p><small class="text-muted"><%= formatFullDateRange(Date.current.beginning_of_week, Date.current.end_of_week) %></small></p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12"><%= render weekly_mileage_progress_path, object: weekly_total %></div>
				</div>
			</div>
			<div class="col-md-2">
				<%= render edit_icon_btn_tag_path, target: "#weeklyTotalEditModal" %>
				<%= render "edit-weekly-total-modal" %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 text-center">
				<p><%= concat_run_totals_line_one(weekly_total) %> | <%= concat_run_totals_line_two(weekly_total.time_in_seconds) %></p>
			</div>
		</div>
	</div>
</div>