<%= render edit_header_path, path: admin_race_examples_path, btn_text: "Race Examples" %>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="panel panel-default">
			<div class="panel-heading text-center">
				<h1>Editing: <strong><%= @race_distance.name %></strong></h1>
			</div>
			<div class="panel-body">
				<%= form_with(model: [:admin , @race_distance], local: true, class: "form-horizontal", html: { autocomplete: "off" }) do |f| %>
				  <%= render "templates/alerts/form-errors", model: @race_distance %>

				  <div class="row vertical-align-middle">
				    <div class="col-xs-2 text-right"><%= f.label :name, 'Name:' %></div>
				    <div class="col-xs-4"><%= f.text_field :name, { class: 'form-control', placeholder: "Example Race" } %></div>
				  </div>
				  <br />
				  <div class="row vertical-align-middle">
				    <div class="col-xs-2 text-right"><%= f.label :numeric_distance, 'Numeric Distance:' %></div>
				    <div class="col-xs-1"><%= f.number_field :numeric_distance, { class: 'form-control', min: 0, step: 0.1, placeholder: "hours" } %></div>
				  </div>
				  <br />
				  <div class="row">
				    <div class="col-md-4 col-md-offset-4">
				      <%= f.submit "Save Changes", class: "btn btn-success btn-block" %>
				    </div>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
</div>
