<%= render edit_header_path, path: admin_race_examples_path, btn_text: "Race Examples" %>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="panel panel-default">
			<div class="panel-heading text-center">
				<h1>Editing: <%= bold_text(@race_distance.name) %></h1>
			</div>
			<div class="panel-body">
				<%= form_with(model: [:admin , @race_distance], local: true, class: "form-horizontal", html: { autocomplete: "off" }) do |f| %>
				  <%= render "templates/alerts/form-errors", model: @race_distance %>

				  <div class="row text-center">
				    <div class="col-xs-2 col-sm-offset-4">
						<%= f.label :name, 'Name:' %>
						<%= f.text_field :name, { class: 'form-control', placeholder: "Example Race", disabled: session[:website_viewer] } %>
				    </div>
				    <div class="col-xs-2">
						<%= f.label :numeric_distance, 'Numeric Distance:' %>
						<%= f.number_field :numeric_distance, { class: 'form-control', min: 0, step: 0.1, placeholder: "hours", disabled: session[:website_viewer] } %>
				    </div>
				  </div>
				  <br />
				  <div class="row">
				    <div class="col-md-4 col-md-offset-4">
				      <%= f.submit "Save Changes", class: "btn btn-success btn-block", disabled: session[:website_viewer] %>
				    </div>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
</div>
