<%= render index_header_path, heading_text: "Total Records" %>

<div class="row">
	<div class="col-sm-2">
		<div class="list-group text-center">
			<% @yearly_totals.each do |yearly_total| %>
				<a class="list-group-item" id="<%=yearly_total.year%>-navbar" href="#<%=yearly_total.year%>-panel" data-toggle="tab">
					<h4 class="list-group-item-heading"><%= yearly_total.year %></h4>
				</a>
			<% end %>
		</div>
	</div>

	<div class="col-sm-8">
		<div class="tab-content">
			<% @yearly_totals.each do |yearly_total| %>
				<div id="<%=yearly_total.year%>-panel" class="panel panel-default tab-pane fade in">
					<div class="panel-heading text-center">
						<h1 class="panel-title"><%= yearly_total.year %></h1>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-xs-6 col-xs-offset-3">
								<p class="text-center"><%= concat_run_totals_line_one(yearly_total) %></p>
								<p class="text-center"><%= concat_run_totals_line_two(yearly_total.time_in_seconds) %></p>
							</div>
							<div class="col-xs-3 text-right">
								<%= render edit_btn_path, edit_path: edit_admin_total_record_yearly_total_path(yearly_total) %>
							</div>
						</div>
						<br />
						<div class="row">
							<div class="col-xs-12">
								<table class="table table-responsive table-striped table-hover table-responsive w-auto">
									<thead>
										<tr>
											<th></th>
											<th># of Runs</th>
											<th>Mileage</th>
											<th>Elevation</th>
											<th>Time</th>
											<th colspan="2"></th>
										</tr>
									</thead>
									<tbody>
										<% yearly_total.monthly_totals.each do |monthly_total| %>
											<tr class="text-center">
												<td><%= format_month(monthly_total.month_start) %></td>
												<td><%= concat_number_of_runs(monthly_total.number_of_runs) %></td>
												<td><%= concat_distance_miles(monthly_total.mileage_total) %></td>
												<td><%= concat_elevation_gain(monthly_total.elevation_gain) %></td>
												<td><%= concat_total_time(monthly_total.time_in_seconds) %></td>
												<td><%= display_frozen_flag(monthly_total.frozen_flag) %></td>
												<td><%= render edit_icon_btn_path, edit_path: edit_admin_total_record_monthly_total_path(monthly_total) %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>