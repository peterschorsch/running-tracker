<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h1>Editing: <%= bold_text(format_month(monthly_total.month_start) + " " + formatYear(monthly_total.month_start)) %></h1>
      </div>
      <div class="panel-body">
        <%= form_with(model: [:admin, :total_record, monthly_total], local: true, class: "form-horizontal", html: { autocomplete: "off" }) do |f| %>
          <%= render "templates/alerts/form-errors", model: monthly_total %>

          <div class="row text-center">
            <div class="col-xs-2 col-xs-offset-10">
              <%= f.label :frozen_flag, 'Freeze Record?', { class: "pointer-cursor make-text-unselectable", :disabled => disable_form } %>
              <%= f.check_box :frozen_flag, {} %>
            </div>
          </div>
          <div class="row text-center">
            <div class="col-xs-2 col-xs-offset-2">
              <%= f.label :previous_number_of_runs, 'Old Number of Runs:' %>
              <%= f.number_field :previous_number_of_runs, { class: 'form-control', step: 1, placeholder: "0 runs", :disabled => disable_form } %>
            </div>
            <div class="col-xs-2">
              <%= f.label :new_number_of_runs, 'New Number of Runs:' %>
              <%= f.number_field :new_number_of_runs, { class: 'form-control', step: 1, placeholder: "0 ft.", :disabled => disable_form } %>
            </div>
            <div class="col-xs-2">
              <%= f.label :previous_mileage_total, 'Old Mileage Total:' %>
              <%= f.number_field :new_mileage_total, { class: 'form-control', step: 0.01, placeholder: "0 miles", :disabled => disable_form } %>
            </div>
            <div class="col-xs-2">
              <%= f.label :new_mileage_total, 'New Mileage Total:' %>
              <%= f.number_field :new_mileage_total, { class: 'form-control', step: 0.01, placeholder: "0 miles", :disabled => disable_form } %>
            </div>
          </div>
          <br />
          <div class="row text-center">
            <div class="col-xs-2 col-xs-offset-2">
              <%= f.label :previous_elevation_gain, 'Old Elevation:' %>
              <%= f.number_field :previous_elevation_gain, { class: 'form-control', step: 1, placeholder: "0 ft.", :disabled => disable_form } %>
            </div>
            <div class="col-xs-2">
              <%= f.label :new_elevation_gain, 'New Elevation:' %>
              <%= f.number_field :new_elevation_gain, { class: 'form-control', step: 1, placeholder: "0 ft.", :disabled => disable_form } %>
            </div>
            <div class="col-xs-2">
              <%= f.label :previous_time_in_seconds, 'Old Time in Seconds:' %>
              <%= f.number_field :previous_time_in_seconds, { class: 'form-control', step: 1, placeholder: "0 seconds", :disabled => disable_form } %>
            </div>
            <div class="col-xs-2">
              <%= f.label :new_time_in_seconds, 'New Time in Seconds:' %>
              <%= f.number_field :new_time_in_seconds, { class: 'form-control', step: 1, placeholder: "0 seconds", :disabled => disable_form } %>
            </div>
          </div>
          <br />
          <div class="row">
            <div class="col-md-4 col-md-offset-4">
              <%= f.submit "Save Changes", class: "btn btn-success btn-block", :disabled => disable_form %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
