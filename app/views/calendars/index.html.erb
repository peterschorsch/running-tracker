<div class="row">
	<div class="col-md-3 col-xs-12">
		<%= button_to "Create this Week's Default Runs", create_current_week_runs_calendars_path, { class: "btn btn-info btn-block" } %>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= button_to "Copy Last Week's Runs to This Week", copy_past_week_runs_calendars_path, { class: "btn btn-danger btn-block" } %>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= button_to "Copy This Week's Runs to Next Week", copy_current_week_runs_calendars_path, { class: "btn btn-success btn-block" } %>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= button_tag "Copy This Week's Runs Until Specific Date", :class => "btn btn-warning btn-block", data: { toggle: 'modal', target: '#copySpecificDateModal' } %>
		<%= render "copy-runs-until-date-modal" %>
	</div>
</div>
<hr />

<%= render notice_path %>

<div class="row">
	<div class="col-md-12">
		<p class="text-center">
			<% @run_types.each do |run_type| %>
				| <span style="color: <%=run_type.hex_code%>"><%= run_type.name %></span>
			<% end %> |
		</p>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<%= month_calendar(attribute: :start_time, events: @runs) do |date, runs| %>
			<h5><strong><%= date %></strong></h5>
			<hr />
			<% runs.each do |run| %>
				<%= render run.was_completed? ? "completed-run-card" : "default-run-card", run: run %>
			<% end %>
		<% end %>
	</div>
</div>


