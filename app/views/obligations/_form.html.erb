<%= form_with(model: obligation, local: true, class: "form-horizontal", html: { autocomplete: "off" }) do |f| %>
  <%= render "templates/alerts/form-errors", model: obligation %>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-2 text-right"><%= f.label :name, 'Name:' %></div>
    <div class="col-xs-5"><%= f.text_field :name, { class: 'form-control', placeholder: "Event Name" } %></div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-1 col-xs-offset-2 text-right"><%= f.label :start_time, 'Start Time:' %></div>
    <div class="col-xs-3"><%= f.datetime_field :start_time, { class: 'form-control' } %></div>
    <div class="col-xs-1 text-right"><%= f.label :end_time, 'End Time:' %></div>
    <div class="col-xs-3"><%= f.datetime_field :end_time, { class: 'form-control' } %></div>
    <div class="col-xs-1"><%= check_box_tag 'check_end_time', true, false, class: 'form-control' %></div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-1 col-xs-offset-2 text-right"><%= f.label :city, 'City:' %></div>
    <div class="col-xs-2"><%= f.text_field :city, { class: 'form-control', placeholder: 'Anytown' } %></div>
    <div class="col-xs-1 text-right"><%= f.label :state, 'State:' %></div>
    <div class="col-xs-3"><%= f.select(:state_id, State.select_state_id_name, { :include_blank => "Please Select a State" }, { :class => "form-control" })%></div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.submit "Save Changes", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>
