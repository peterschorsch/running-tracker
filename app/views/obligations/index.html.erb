<%= render index_header_new_btn_path, new_path: new_obligation_path, new_btn_text: "Obligation", heading_text: "My Obligations" %>

<table class="table table-responsive table-striped table-hover table-responsive w-auto">
  <tbody>
    <% @obligations.in_groups_of(2, false).each do |obligations| %>
      <tr>
        <% obligations.each do |obligation| %>
          <th>
            <%= formatFullDate(obligation.start_time) %><br />
            <%= nil_end_time_check(obligation) %>
          </th>
          <td>
            <small><%= concat_city_state_abbreviation(obligation) %></small><br />
            <strong><%= obligation.name %></strong>   
          </td>
          <td>
            <%= render edit_icon_btn_path, edit_path: edit_obligation_path(obligation), disabled_condition: false %>
            <%= render remove_icon_btn_path, object: obligation %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
