<%= render index_header_new_btn_path, new_path: new_obligation_path, new_btn_text: "Obligation", heading_text: "Obligations to Attend To" %>

<table class="table table-responsive table-striped table-hover table-responsive w-auto">
  <tbody>
    <% @obligations.each do |obligation| %>
      <tr>
        <td>
          <strong><%= obligation.name %></strong>
          <%= render edit_icon_btn_path, edit_path: edit_obligation_path(obligation) %>
          <%= render remove_icon_btn_path, object: obligation %>
          <br />
          <%= obligation.return_formatted_date %>
          <br />
          <%= obligation.return_formatted_time_period %>
          <br />
          <%= obligation.return_city_state_full %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
